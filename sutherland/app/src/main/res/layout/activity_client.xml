<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linear_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/headerbar">

        <ImageView
            android:id="@+id/back_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back_arrow_white"
            android:layout_gravity="center"
            android:layout_marginLeft="20dip"/>


        <TextView
            android:id="@+id/txt_selectclient"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/txt_selectclient"
            android:textAlignment="center"
            android:textSize="18dip"
            android:textColor="@color/white"
            android:layout_gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_search"
        android:layout_width="match_parent"
        android:layout_height="68dip"
        android:orientation="vertical"
        android:background="@color/linearsearchback">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dip"
            android:background="@drawable/rounded_search"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_margin="15dip"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/image_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/searchfieldicon"
                android:layout_margin="10dip"
                android:layout_gravity="center"/>

            <EditText
                android:id="@+id/search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Search"
                android:textSize="16dip"
                android:layout_marginLeft="10dip"
                android:background="@null"/>


        </LinearLayout>

        <ImageView
            android:id="@+id/image_divider"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/menuitemdivider" />


    </LinearLayout>

    <ListView
        android:id="@+id/list_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></ListView>


</LinearLayout>